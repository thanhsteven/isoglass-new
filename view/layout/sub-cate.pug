//- Layout Danh mục sản phẩm phụ
include ../mixin/mixins.pug
include ../mixin/categories.pug
include ../mixin/products.pug
doctype html
html(lang="vi")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    block titleCategory
      title Layout Danh mục CON cho các trang danh mục
    block stylesheet
      link(rel="shortcut icon" href="../images/logo/favicon-isoglass.png" type="image/x-icon")
      link(rel="stylesheet" href="../vendor/font-awesome/css/font-awesome.min.css")
      link(rel="stylesheet" href="../style/main.css")
      link(rel="stylesheet" href="../style/sub-cate.css")
  body 
    include ./header/header.pug
    include ./menu/menu-2.pug
    include ./child-title.pug
    .container
      .sub-cat-breadcrumb
        ul
          li Trang chủ 
          li Chai thủy tinh 
          li Chai thuỷ tinh đựng rượu
      .sub-cat-title 
        block cateChildTitle 
      .sub-cat-rating 
        span Đánh giá:
        .sub-cat-rating-star 
          i.fa.fa-star(aria-hidden="true")
          i.fa.fa-star(aria-hidden="true")
          i.fa.fa-star(aria-hidden="true")
          i.fa.fa-star(aria-hidden="true")
          i.fa.fa-star(aria-hidden="true")
      .sub-cat-short-description
        block shortDescription 
      .sub-cat-gallery-images
        block galleryImage
      main.sub-cat-main 
        article.sub-cat-main-content 
          .sub-cat-product
            h2.sub-cat-product-title 
              block cateChildProductsHeader2 
            .sub-cat-product
              block cateChildProducts 
          .sub-cat-extra-description
            block cateChildExtraDescription 
        aside.sub-cat-main-sidebar 
          button.sub-cat-main-sidebar-close 
            i.fa.fa-close(aria-hidden="true")
            span Đóng
          button.sub-cat-main-sidebar-open
            i.fa.fa-ellipsis-h(aria-hidden="true")
          include ./sidebar/sidebar.pug
    include ./footer/prefooter.pug
    include ./footer/footer.pug
  block scriptJS
    script(src="../js/main.js")
    script(src="../js/sub-categories.js") 