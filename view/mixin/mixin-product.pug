//- Product Gallery
mixin productGallery(gallery)
  .product-gallery-wrapper 
    .product-gallery-carousel 
      .product-gallery-carousel-vertical 
        .product-gallery-carousel-thumb
          each item in gallery
            .product-gallery-carousel-image 
              img(src=item, alt="Chai thuỷ tinh đựng rượu dung tích 750ml")
        .product-gallery-button 
          button.product-gallery-button-up 
            i.fa.fa-angle-up(aria-hidden="true")
          button.product-gallery-button-down 
            i.fa.fa-angle-down(aria-hidden="true")
      .product-gallery-carousel-main
        .product-gallery-carousel-main-item 
          img(src="../../images/chai-thuy-tinh/chai-thuy-tinh-750ml/chai-thuy-tinh-than-tru-vuong-dung-ruou-size-750ml-iso-45.jpg" alt="Chai thuỷ tinh đựng nước giá tốt tại TP.HCM" srcset="../../images/chai-thuy-tinh/chai-thuy-tinh-750ml/chai-thuy-tinh-than-tru-vuong-dung-ruou-size-750ml-iso-45.jpg 2x")
        .product-gallery-show 
          a(href="#" rel="noopener noreferrer nofollow")
            i.fa.fa-expand(aria-hidden="true")
            span Click để mở rộng

//- Product Featured
mixin productFeatured(featured)
  h2.product-featured-title Đặc điểm nổi bật từ iSOGLASS 
  .product-featured-wrapper 
    each item in featured
      .product-featured-item 
        .product-featured-image 
          img(src=item.image, alt=item.subtitle, srcset=`${item.image} 2x`)
        .product-featured-usp 
          p.product-featured-usp-title=item.title
          p.product-featured-usp-sub=item.subtitle

//- Product Seen
mixin productSeen(seen)
  h2.product-seen-title Sản phẩm đã xem
  .product-seen-wrapper 
    each item in product_seen
      +productStyle04(item.href, item.image, item.image2, item.title)

//- Product Infomation Box - Style 01
mixin productStyle01(href, image, title)
  .product-item-1-wrapper
    a.product-item-1-link(href=href, target="_blank" rel="noopener noreferrer")
      .product-item-1-image
        img(src=image, alt=title, srcset=`${image} 2x`)
      .product-item-1-hover
        .product-item-1-content
          h3.product-item-1-title=title
    +btnProduct("Đọc tiếp")(class="product-item-1-button")

//- Product Infomation Box - Style 02
mixin productStyle02(href, image, title, cats)
  .product-item-2-wrapper 
    a.product-item-2-link(href=href, target="_blank" rel="nofollow noopener noreferrer")
      .product-item-2-image
        img(src=image, alt=title, srcset=`${image} 2x`)
    a(href=href, target="_blank" rel="noopener noreferrer")
      h3.product-item-2-title=title
    .product-item-2-cats
      a(href=href, target="_blank" rel="nofollow noopener noreferrer")=cats 
    .product-item-2-button
      +btnProduct2("Xem thêm")(class="product-item-2-button")

//- Product Infomation Box - Style 03
mixin productStyle03(href, image1, image2, title, rating, cate, status)
  .product-item-3-wrapper
    a.product-item-3-link(href=href, rel="noopener noreferrer nofollow")
      .product-item-3-image 
        img.product-item-3-image-first(src=image1, alt=title, srcset=`${image1} 2x`)
        img.product-item-3-image-last(src=image2, alt=title, srcset=`${image2} 2x`)
    .product-item-3-hover 
      .product-item-3-content 
        .product-item-3-title 
          a(href=href, rel="noopener noreferrer nofollow")
            h3=title
          .product-item-3-rating
            span=rating 
            i.fa.fa-star 
        .product-item-3-cate 
          a(href="#" target="_blank" rel="noopener noreferrer")=cate
        .product-item-3-btn
          button.product-item-3-btn-hotline Liên hệ Hotline 
          button.product-item-3-btn-zalo Báo giá Zalo

//- Product Infomation Box - Style 04
mixin productStyle04(href, image, image2, title)
  .product-item-4-item 
    .product-item-4-wrapper 
      .product-item-4-image
        a(href=href, target="_blank" rel="noopener noreferrer nofollow")
          img.product-item-4-image-main(src=image, alt=title, srcset=`${image} 2x`)
          img.product-item-4-image-hover(src=image2, alt=title, srcset=`${image2} 2x`)
      a.product-item-4-button(href="#" target="_blank" rel="noopener noreferrer nofollow")
        span Đọc tiếp
    .product-item-4-title
      h3
        a(href="#" target="_blank" rel="noopener noreferrer nofollow")=title