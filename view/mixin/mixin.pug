// Title Style 01
mixin title(subtitle, title, titleAfter)
  .title-wrapper 
    span.subtitle=subtitle
    h2.title=title
    p.title-after=titleAfter

// Button Product Style 01
mixin btnProduct(text)
  a.btn_product_ver1(class!=attributes.class href="#", target="_blank", rel="nofollow noopener noreferrer")
    span=text 

// Button Product Style 02
mixin btnProduct2(text)
  a.btn-product-2(class!=attributes.class href="#", target="_blank", rel="nofollow noopener noreferrer")
      span=text