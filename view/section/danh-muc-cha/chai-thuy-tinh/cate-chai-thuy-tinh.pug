      .cate-item 
        a.cate-item-link(href=item.href, rel="noopener noreferrer")
          .cate-item-image 
            img(src=item.image, alt=item.title, srcset=`${item.image} 2x`)
          .cate-item-content 
            h3.cate-item-title=item.title 
            span.cate-item-count=item.count 