section.chaithuytinh-cate
  .container
    +title("Danh mục nổi bật", "Chai thuỷ tinh iSOGLASS")
    .chaithuytinh-cate-wrapper
      each item in chaithuytinh_cate
        a.chaithuytinh-cate-item(href=item.href, target="_blank", rel="noopener noreferrer")
          .chaithuytinh-cate-image
            img(src=item.image, alt=item.title)
          .chaithuytinh-cate-hover
            .chaithuytinh-cate-content
              h3.chaithuytinh-cate-title=item.title 
              span.chaithuytinh-cate-count=item.count
